<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:padding="10dp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startOperatorsActivity"
                android:text="Operators"
                android:textColor="@android:color/black"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startNetworkingActivity"
                android:text="networking"
                android:textColor="@android:color/black"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startSearchActivity"
                android:text="search"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="recyclerViewActivity"
                android:text="Recycler View"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="retrofitActivity"
                android:text="Retrofit"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="withoutLifecycleActivity"
                android:text="without Lifecycle"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="withLifecycleActivity"
                android:text="with Lifecycle"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="livedataViewmodelActivity"
                android:text="Livedata ViewModel"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="retofitModified"
                android:text="Retrofit Modified"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="withDagger"
                android:text="With Dagger"
                android:textColor="@android:color/black"/>
        <EditText
                android:id="@+id/edt"
                android:saveEnabled="false"

                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
